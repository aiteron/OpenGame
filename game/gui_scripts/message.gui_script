function on_input(self, action_id, action)
    if action_id == hash("touch") and action.pressed then
        local button = gui.get_node("button")
        if gui.pick_node(button, action.x, action.y) then
            if html5 then
                html5.run("reloadCurrentPage()")
            end
        end
    end
end

